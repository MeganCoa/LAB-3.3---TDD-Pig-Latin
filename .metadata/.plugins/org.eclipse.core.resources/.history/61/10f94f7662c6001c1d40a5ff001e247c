	@Test
	public void hasSpecialChar() {
		String expected = "email@email.com"; 
		String actual = PigLatin.lowercase("email@email.com");
		assertEquals(expected, actual);
	}
	@Test
	public void lowercaseTest() {
		String expected = "school"; //Test lower case
		String actual = PigLatin.lowercase("SCHOOL");
		assertEquals(expected, actual);
	}
	@Test
	public void vowelTest() {
		Boolean expected = true; //Test lower case
		Boolean actual = PigLatin.isVowel('u');
		assertEquals(expected, actual);
	}


}
